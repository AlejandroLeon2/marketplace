---
import Titulo from "./ui/Titulo.astro";
---

<div
  id="modal-admin"
  role="dialog"
  aria-modal="true"
  aria-labelledby="titulo-modal-cuenta"
  class="fixed inset-0 z-50 transition-all ease-in-out duration-1000 hidden flex"
>
  <div class="bg-white rounded-r-lg w-full max-w-xs p-6">
    <nav class="relative">
      <Titulo titulo="Mi cuenta" />
      <button
        id="cerrar-modalAdmin"
        class="botonRojo absolute right-1 top-1 px-2"
        aria-label="Cerrar panel">✕</button
      >

      <ul class="space-y-2">
        <li>
          <button
            type="button"
            class="text-left botonBasico w-full py-2 px-4"
            data-section="compras">Compras</button
          >
        </li>
        <li>
          <button
            type="button"
            class="text-left botonBasico w-full py-2 px-4"
            data-section="ventas">Ventas</button
          >
        </li>
        <li>
          <button
            type="button"
            class="text-left botonBasico w-full py-2 px-4"
            data-section="anuncios">Mis Libros</button
          >
        </li>
        <li>
          <button
            type="button"
            class="text-left botonBasico w-full py-2 px-4"
            data-section="facturacion">Facturación</button
          >
        </li>
        <li>
          <button
            type="button"
            class="text-left botonBasico w-full py-2 px-4"
            data-section="perfil">Mi perfil</button
          >
        </li>
      </ul>
    </nav>
  </div>
</div>
<script src="../scripts/util/modal/adminModal"></script>
<script src="../scripts/util/tab/tabAdmin"></script>
