---
import libros from "../data/libros.json";
---

<div class="max-w-6xl mx-auto p-2 sm:p-4">
  <div class="space-y-3 sm:space-y-4">
    {libros.map((libro) => (
      <div
        class="flex items-center bg-white rounded-2xl shadow-md p-3 sm:p-4"
        >
        <!-- Checkbox -->
        <input
          type="checkbox"
          class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
        />

        <!-- Imagen + info libro -->
        <div class="flex items-center gap-3 flex-1 ml-3">
          <img
            src={libro.imagen}
            alt={libro.titulo}
            class="w-14 h-14 sm:w-16 sm:h-16 rounded-md object-cover"
          />
          <div>
            <h3 class="text-sm sm:text-lg font-semibold">{libro.titulo}</h3>
            <p class="text-xs sm:text-sm text-gray-500">{libro.categoria}</p>
          </div>
        </div>

        <!-- Precio (columna fija a la derecha) -->
        <div class="w-24 text-left ml-20">
          <p class="text-base sm:text-xl font-bold text-green-600">
            S/ {libro.precio}
          </p>
        </div>

        <!-- Switch -->
        <div class="flex items-center gap-2 ml-4">
          <span class="text-xs sm:text-sm text-gray-600">
            {libro.activo ? "Activo" : "Inactivo"}
          </span>
          <label class="inline-flex items-center cursor-pointer">
            <input
              type="checkbox"
              checked={libro.activo}
              class="sr-only peer"
            />
            <div
              class="w-9 h-5 sm:w-11 sm:h-6 bg-gray-200 rounded-full peer peer-checked:bg-blue-600 relative"
            >
              <div
                class="absolute top-0.5 left-0.5 w-4 h-4 sm:w-5 sm:h-5 bg-white rounded-full transition peer-checked:translate-x-4 sm:peer-checked:translate-x-5"
              ></div>
            </div>
          </label>
        </div>
      </div>
    ))}
  </div>
</div>
