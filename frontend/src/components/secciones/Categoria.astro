---
import Titulo from "../ui/Titulo.astro";
import CardLibro from "../ui/CardLibro.astro";
const { libros, tituloSeccion } = Astro.props;
---

<section class="p-4">
  <Titulo titulo={tituloSeccion} />
  <ul class="px-4 gap-4 flex  h-full overflow-x-scroll ">
    {
      libros.map((libro) => (
        <li class="">
          <CardLibro
            image={libro.imagen}
            titulo={libro.titulo}
            autor={libro.autor}
            precio={libro.precio}
          />
        </li>
      ))
    }
  </ul>
</section>
