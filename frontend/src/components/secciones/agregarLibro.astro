---
import Layout from "../../layouts/Layout.astro";
import Titulo from "../ui/Titulo.astro";
import Seleccion from "../ui/Seleccion.astro";

const categorias: string[] = [
  "novela",
  "cuento",
  "poesía",
  "ensayo",
  "biografía",
  "autoayuda",
  "infantil",
  "juvenil",
  "fantasía",
  "ciencia ficción",
  "historia",
  "religión",
  "educativo",
  "arte",
  "cómic",
  "manga",
];
const estado: string[] = ["activo", "pausado", "agotado"];
const formato: string[] = ["fisico", "digital"];
---

<Layout title="Agregar Libro">
  <section
    class="max-w-3xl mx-auto p-6 bg-white rounded-2xl shadow-sm border-1 border-gray-300 mt-10"
  >
    <Titulo titulo="Agregar Libro" />

    <form id="formLibros" method="POST" class="space-y-4">
      <!-- Título -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="titulo" class="w-40 text-sm font-medium text-gray-700"
          >Título *</label
        >
        <input
          type="text"
          id="titulo"
          name="titulo"
          required
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 border-1 shadow p-2"
        />
      </div>

      <!-- Descripción -->
      <div class="flex flex-col sm:flex-row sm:items-start sm:space-x-4">
        <label
          for="descripcion"
          class="w-40 text-sm font-medium text-gray-700 mt-1"
          >Descripción *</label
        >
        <textarea
          id="descripcion"
          name="descripcion"
          required
          rows="3"
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 border-1 shadow p-2"
        ></textarea>
      </div>

      <!-- Autor -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="autor" class="w-40 text-sm font-medium text-gray-700"
          >Autor</label
        >
        <input
          type="text"
          id="autor"
          name="autor"
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 shadow border-1
                p-2"
        />
      </div>

      <!-- Editorial -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="editorial" class="w-40 text-sm font-medium text-gray-700"
          >Editorial</label
        >
        <input
          type="text"
          id="editorial"
          name="editorial"
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 shadow border-1
               p-2"
        />
      </div>

      <!-- Precio -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="precio" class="w-40 text-sm font-medium text-gray-700"
          >Precio *</label
        >
        <input
          type="number"
          step="0.01"
          id="precio"
          name="precio"
          required
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 shadow border-1
                p-2"
        />
      </div>

      <!-- Imagen -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="imagen" class="w-40 text-sm font-medium text-gray-700"
          >URL de Imagen *</label
        >
        <input
          type="url"
          id="imagen"
          name="imagen"
          required
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 shadow border-1
                p-2"
        />
      </div>

      <!-- Categoría -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="categoria" class="w-40 text-sm font-medium text-gray-700"
          >Categoría</label
        >
        <Seleccion id="categoria" data={categorias} />
      </div>

      <!-- Idioma -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="idioma" class="w-40 text-sm font-medium text-gray-700"
          >Idioma</label
        >
        <input
          type="text"
          id="idioma"
          name="idioma"
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 shadow border-1
                 p-2"
        />
      </div>

      <!-- Año de publicación -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label
          for="anio_publicacion"
          class="w-40 text-sm font-medium text-gray-700"
          >Año de Publicación</label
        >
        <input
          type="number"
          id="anio_publicacion"
          name="anio_publicacion"
          min="1500"
          max="2099"
          class="mt-1 sm:mt-0 flex-1 text-sm rounded-xl border-gray-300 shadow border-1
                 p-2"
        />
      </div>

      <!-- Estado -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="estado" class="w-40 text-sm font-medium text-gray-700"
          >Estado *</label
        >
        <Seleccion id="estado" data={estado} />
      </div>

      <!-- Formato -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4">
        <label for="formato" class="w-40 text-sm font-medium text-gray-700"
          >Formato</label
        >
        <Seleccion id="formato" data={formato} />
      </div>

      <!-- Botón -->
      <div class="flex justify-center pt-4">
        <button
          type="submit"
          class="w-full text-center boton px-6 py-2 rounded-xl text-white hover:bg-indigo-700 transition"
        >
          Guardar Libro
        </button>
      </div>
    </form>
  </section>
</Layout>

<script src="../../scripts/productos/guardarLibro"></script>
