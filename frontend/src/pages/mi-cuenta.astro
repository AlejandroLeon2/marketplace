---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ModalAdmin from "../components/ModalAdmin.astro";
---

<Layout>
  <Header />
  <main class="h-screen mx-auto w-full max-w-6xl justify-center items-center">
    <div class="flex w-full h-full p-[2vh_0]">
      <section class="w-[20%] h-full flex-row bg-gray-400">
        barra de navegacion
      </section>
      <!--Inicio de componente -->
      <section class="flex flex-col w-[80%] h-full p-[4%_0]">
        <section class="flex w-full h-[25%] p-[0_15%]">
          <figure class="flex min-w-[20%] h-auto justify-end">
            <img
              src="/public/images/gato.jpg"
              alt="pikPerfil"
              class="object-contain"
            />
          </figure>
          <div class="flex flex-col justify-center w-[75%] p-2">
            <h2 class="text-[1.7rem] font-bold">Juan de Las Nieves</h2>
            <nav>
              <button>Mis Datos</button>
              |
              <button>Cerrar Sesion</button>
            </nav>
          </div>
        </section>
        <div class="p-[3vh_0_2vh_22%]">
          <nav class="border-b">
            <button class="p-[1vh_2vh]">Perfil</button>
            <button class="text-blue-800 p-[1vh_2vh]"
              >Informacion de Pago</button
            >
          </nav>
          <section class="flex flex-col gap-3 my-[2vh]">
            <h3 class="text-[2rem] text-morado">DATOS PERSONALES</h3>
            <div class="flex flex-col gap-5 p-[0_8vh_2vh_2vh]">
              <article>Nombres <span> Pedrio angustia </span></article>
              <article>Apellidos <span> alejandro mango </span></article>
              <article>NIKAName <span> Spantan3000 </span></article>
              <article>email <span> corre@correo.com </span></article>
            </div>
          </section>
        </div>
      </section>
    </div>
  </main>
  <Footer />
  <ModalAdmin />
</Layout>

<style>
  button {
    cursor: pointer;
  }
  button:hover {
    color: rgb(19, 100, 192);
  }
  article {
    display: flex;
    justify-content: space-between;
    font-weight: bold;
  }
  article span {
    width: 70%;
    border-radius: 5px;
    border: 1px solid;
    padding: 5px 10px;
    font-weight: normal;
  }
</style>
